
<%= simple_form_for :workshop_participant, url: workshop_participants_path do |f| %>
  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.hidden_field :workshop_id, value: @workshop.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
