<%= simple_form_for(@track) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
  </div>

  <div class="workshop-input">
    <%= f.association :workshops, label_method: :title, include_blank: false, as: :check_boxes%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
